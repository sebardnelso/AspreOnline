<!-- login.ejs -->
<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="styles.css">
    <title>Catalogo ASPRE Online</title>
</head>
<body>
    <% if (message) { %>
        <div class="error-message">
          <%= message %>
        </div>
      <% } %>
      <div class="logo">
            <button class="image-button">
                <img src="favicon4.png" alt="Imagen 1">
            </button>

    <form action="/login" method="POST">
        <label id="titulo" class="centered-text" for="Iniciar sesion">Iniciar Sesión</label>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" required><br>

        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required><br>

        <button type="submit">Iniciar Sesión</button>


    </form>
    <script>
        document.getElementById('login-button').addEventListener('click', function () {
            // Envía una solicitud POST a la ruta /crearTabla
            fetch('/crearTabla', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
            })
            .then(response => {
                if (response.status === 200) {
                    // Redirige al usuario a la página deseada después de crear la tabla
                    window.location.href = '/precios';
                } else {
                    // Maneja cualquier error que pueda ocurrir al crear la tabla
                    console.error('Error al crear la tabla:', response.status);
                }
            })
            .catch(error => {
                console.error('Error al crear la tabla:', error);
            });
        });
        </script>
</body>
</html>

